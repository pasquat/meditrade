<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/whiterounded"
    android:elevation="5dp">

    <LinearLayout
        android:id="@+id/textandlocation"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewdtitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/lato_black"
            android:text="30pc Face Masks"
            android:textColor="#000000"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/location_on_24px_outlined" />

            <TextView
                android:id="@+id/textViewdlocation"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato"
                android:text="Cupertino"
                android:textColor="#7D7D7D"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttond"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12.5dp"
        android:layout_toRightOf="@id/textandlocation"
        android:background="@drawable/gradient_red"
        android:fontFamily="@font/lato_black"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="DELETE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
